<html>

<head>
    <title>Portfolio</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


    <style>
        body {
            background-color: #ffcc00;
        }

        .table {
            margin: 5% auto 15% auto;
            width: 80%;

        }

        .tr:hover {

            color: #d1945a;
        }
    </style>
</head>
<div>

    <body>
        <table class=" table table-dark  table-striped table-bordered ">
            <form action="/multipleDeleteportfolio" method="get">

                <thead>
                    <tr>
                        <th colspan="6">
                            <h3>Portfolio</h3>
                        </th>
                        <td align="center"><a href="newportfolio"><button type="button" class="btn btn-info">Add
                                    New Portfolio</button> </a>
                            <a href="/dashboard" class="btn btn-danger">cancel</a>
                        </td>

                    </tr>
                    <tr class="font sr">

                        <th>
                            <center>Project Category</center>
                        </th>
                        <th>
                            <center>Porject Name</center>
                        </th>
                        <th>
                            <center>Profile</center>
                        </th>
                        <th>
                            <center>Porject Title</center>
                        </th>
                        <th>
                            <center>Porject Date</center>
                        </th>
                        <th>
                            <center>Description</center>
                        </th>

                        <th>
                            <center>Action</center>
                        </th>
                        <th>
                            <center><button type="submit" class="btn btn-primary">Multiple Delete</button></center>
                        </th>
                    </tr>
                </thead>
                <tr class="tr">
                    <% values.forEach(function(value) { %>
                        <td>
                            <center>
                                <%=value.project_category.category %>
                            </center>
                        </td>
                        <td>
                            <center>
                                <%=value.porject_name%>
                            </center>
                        </td>
                        <td>
                            <% value.profile.forEach(function(v){ %>
                                <img src="/<%= v %>" style="height: 100px;" alt="user image">
                                <%})%>
                        </td>

                        <td>
                            <center>
                                <%=value.porject_title %>
                            </center>
                        </td>
                        <td>
                            <center>
                                <%=value.porject_date.toLocaleDateString() %>
                            </center>
                        </td>
                        <td>
                            <center>
                                <%=value.description %>
                            </center>
                        </td>


                        <td>

                            <center><a href="/editportfolio/<%= value._id%>"><button type="button"
                                        class="btn btn-info">Edit</button>
                                </a>
                                <a href="/deleteportfolio/<%= value._id%>" class="delete"
                                    onclick="return confirm('Are you sure you want to delete this item?');"><button
                                        type="button" class="btn btn-danger">Delete</button></a>
                            </center>
                        </td>
                        <td>
                            <center>
                                <input type="checkbox" id="Traveling" name="<%= value._id%>" value="Traveling">

                            </center>

                        </td>
                </tr>
                <% }) %>

                    </tr>
            </form>
        </table>
</div>
</body>

</html>