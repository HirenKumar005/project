<html>

<head>
    <title>Login Form</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: gray;
        }

        .loginbox {
            border-radius: 20px;
            background: #ffffff;
            top: 50%;
            left: 50%;
            padding: 20px;
            width: 400px;
            height: 420px;
            position: absolute;
            transform: translate(-50%, -50%);
        }
    </style>
</head>

<body>
    <div class="container loginbox">
        <h1 align="center">Login Form</h1>
        <% if (typeof error1 !=='undefined' && error1.length> 0) { %>
            <div style="color: red;">
                <%= error1 %>
            </div>
            <% } %>
                <form action="auth" method="post">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" class="form-control" name="email" id="userid" placeholder="Enter Your Email"
                            value="<%= values.email %>">
                        <% if (typeof error3 !=='undefined' && error3.length> 0) { %>
                            <div style="color: red;">
                                <%= error3 %>
                            </div>
                            <% } %>
                    </div>
                    <div class="form-group">
                        <label for="psw">Password:</label>
                        <input type="password" class="form-control" name="password" id="psw"
                            placeholder="Enter The Password" value="<%= values.password %>">
                        <% if (typeof error5 !=='undefined' && error5.length> 0) { %>
                            <div style="color: red;">
                                <%= error5 %>
                            </div>
                            <% } %>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a href="register" class="btn btn-success">Register Now</a>
                    </div>
                    <div>
                        <a href="forgot">forgot password..</a></br>
                    </div>
                </form>


    </div>
</body>

</html>