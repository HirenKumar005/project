<html>

<head>
    <title>Category</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


    <style>
        body {
            background-color: #ffcc00;
        }

        .table {
            margin: 5% auto 15% auto;
            width: 80%;

        }

        .tr:hover {

            color: #d1945a;
        }
    </style>
</head>
<div>

    <body>
        <table class=" table table-dark  table-striped table-bordered ">
            <form action="/multipleDeletecontact" method="get">
                <thead>
                    <tr>
                        <th colspan="5">
                            <h3>Contact Us</h3>
                        </th>
                        <td align="center"><a href="newcontact"><button type="button" class="btn btn-info">Add
                                    New Contact</button> </a>
                            <a href="/dashboard" class="btn btn-danger">cancel</a>
                        </td>

                    </tr>
                    <tr class="font sr">

                        <th>
                            <center>Name</center>
                        </th>
                        <th>
                            <center>Email</center>
                        </th>
                        <th>
                            <center>Number</center>
                        </th>
                        <th>
                            <center>Message</center>
                        </th>
                        <th>
                            <center>Date</center>
                        </th>

                        <th>
                            <center>Action</center>
                        </th>
                        <th>
                            <center><button type="submit" class="btn btn-primary">Multiple Delete</button></center>
                        </th>
                    </tr>
                </thead>
                <tr class="tr">
                    <% values.forEach(function(value) { %>
                        <td>
                            <center>
                                <%=value.name %>
                            </center>
                        </td>
                        <td>
                            <center>
                                <%=value.email %>
                            </center>
                        </td>
                        <td>
                            <center>
                                <%=value.number %>
                            </center>
                        </td>
                        <td>
                            <center>
                                <%=value.message %>
                            </center>
                        </td>
                        <td>
                            <center>

                                <input type="text" class="form-control input-sm" name="date" id="date"
                                    value="<%= value.date.toLocaleDateString() %>" disabled>
                            </center>
                        </td>

                        <td>

                            <center><a href="/editcontact/<%= value._id%>"><button type="button"
                                        class="btn btn-info">Edit</button>
                                </a>
                                <a href="/deletecontact/<%= value._id%>" class="delete"
                                    onclick="return confirm('Are you sure you want to delete this item?');"><button
                                        type="button" class="btn btn-danger">Delete</button></a>
                            </center>
                        </td>
                        <td>
                            <center>
                                <input type="checkbox" id="Traveling" name="<%= value._id%>" value="Traveling">

                            </center>

                        </td>
                </tr>
                <% }) %>

                    </tr>

            </form>
        </table>
</div>
</body>

</html>