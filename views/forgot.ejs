<html>

<head>
    <title>Forgot Password</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: gray;
        }

        .loginbox {
            border-radius: 20px;
            background: #ffffff;
            top: 50%;
            left: 50%;
            padding: 20px;
            width: 400px;
            height: 320px;
            position: absolute;
            transform: translate(-50%, -50%);
        }
    </style>
</head>

<body>
    <div class="container loginbox">
        <h1 align="center">Forgot Password</h1>
        <% if (typeof error1 !=='undefined' && error1.length> 0) { %>
            <div class="alert alert-danger">
                <%= error1 %>
            </div>
            <% } %>
                <form method="post" action="/verifyemail">
                    <div class="form-group">
                        <label for="username">Email:</label>
                        <input type="text" class="form-control" name="email" id="userid" placeholder="Enter your Email">
                        <% if (typeof error3 !=='undefined' && error3.length> 0) { %>
                            <div style="color: red;">
                                <%= error3 %>
                            </div>
                            <% } %>
                    </div>

                    <button type="submit" class="btn btn-success">Get Otp</button>
                    <a href="/" class="btn btn-danger">Cancel</a>
    </div>

    </form>


    </div>
</body>

</html>